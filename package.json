{
  "name": "client2client.io",
  "version": "1.2.0",
  "description": "Socket.io wrapper to enable client to client communications like RPC and pub/sub.",
  "main": "lib/index.js",
  "keywords": [],
  "author": "Jérémie Pardou",
  "license": "ISC",
  "scripts": {
    "clean": "rm ./lib/ -r",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "prepare": "babel src --out-dir lib --ignore '**/*.test.js' --ignore '**/app.js'",
    "server": "nodemon src/app.js --exec babel-node",
    "version": "git changelog -n -t $npm_package_version && git add CHANGELOG.md"
  },
  "dependencies": {
    "nanoid": "^3.1.9"
  },
  "devDependencies": {
    "socket.io": "^2.3.0",
    "express": "^4.17.1",
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "babel-jest": "^26.0.1",
    "jest": "^26.0.1",
    "jest-transform-stub": "^2.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "jest": {
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
